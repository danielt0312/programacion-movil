<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KarnaughActivity">

    <!-- Botón de regresar en ícono -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:contentDescription="Regresar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp" />

    <!-- Contenedor para el mapa de Karnaugh -->
    <LinearLayout
        android:id="@+id/karnaugh_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/btn_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="16dp" />

    <Button
        android:id="@+id/btn_view_expression"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Expresión"
        app:layout_constraintTop_toBottomOf="@+id/btn_back"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp" />

    <Button
        android:id="@+id/btn_view_3d_k_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver en 3D"
        app:layout_constraintTop_toTopOf="@+id/btn_view_expression"
        app:layout_constraintStart_toEndOf="@+id/btn_view_expression"
        android:layout_marginStart="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
